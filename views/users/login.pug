extends ../layout
block header
	link(rel='stylesheet', href='/css/form.css')
block content
	.container.form-container.col-sm-12.col-md-8.col-lg-6
		form.form-signin(action='/users/login', method='POST')
			.row.justify-content-center
					h2 Login
			.row.justify-content-center.mt-4
					input#inputUsername.form-control.mt-3(name='username' type='text', placeholder='Username', autofocus='')
			.row.justify-content-center.mt-2
					input#inputPassword.form-control.mb-3.mt-3(name='password' type='password', placeholder='Password')
			.row.justify-content-center.mt-4
					button.btn.btn-info.btn-block(type='submit') Login