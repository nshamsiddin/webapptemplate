extends layout
block header
block content
    a(href='/reports/request')
        button.btn.btn-info.btn-lg.btn-block.mt-3 Request
    //- table.table.table-striped.mt-3#reports
        thead.thead-dark
            tr
                th(scope='col') #
                th(scope='col') Name
                th(scope='col') Created
                th(scope='col') Comment
                th(scope='col') Status
        tbody
            //- each report, i in reports
                tr(id=report._id)
                    th(scope='row')=i+1
                    td=report.filename
                    td=report.requestedAt
                    td=report.comment
                    td=report.status