doctype html
html
    head
        title #{title}

        link(rel='stylesheet', href='/css/layout.css')
        link(rel='stylesheet', href='/boostrap/css/bootstrap.css')
        script(src='/js/jquery-3.4.1.min.js')
        script(src='/boostrap/js/bootstrap.js')

        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        
        block header
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            .container
                a.navbar-brand(href='/') #{app_title}
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarColor01.collapse.navbar-collapse
                    if user
                        if user.group == 'admin'
                            ul.navbar-nav.mr-auto
                                li.nav-item
                                    a.nav-link(href='/users') Users
                                li.nav-item
                                    a.nav-link(href='/requests') Requests
                                li.nav-item
                                    a.nav-link(href='/reports') Reports
                                li.nav-item
                                    a.nav-link(href='/reasons') Reasons
                                    
                            ul.navbar-nav.navbar-right
                                li.nav-item
                                    a.nav-link(href='/users/logout') Logout    
                                a.nav-link #{user.username}
                        if user.group == 'user'
                            ul.navbar-nav.mr-auto
                                li.nav-item
                                    a.nav-link(href='/reasons') Reasons
                                li.nav-item
                                    a.nav-link(href='/requests') Requests
                                li.nav-item
                                    a.nav-link(href='/users/logout') Logout    
                                a.nav-link #{user.username}
        
        != messages('partials/message', locals)
        .container
            block content